# Environment variables example for WordIsBond
# Copy this file to .env and fill in your actual values

# Database
NEON_PG_CONN=postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@host:5432/database

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-api.workers.dev
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Services  
OPENAI_API_KEY=sk-your-openai-api-key
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Voice Services (SignalWire)
SIGNALWIRE_PROJECT_ID=your-signalwire-project-id
SIGNALWIRE_TOKEN=your-signalwire-token  
SIGNALWIRE_SPACE=your-space.signalwire.com
SIGNALWIRE_NUMBER=+1234567890
SIGNALWIRE_SIP_USERNAME=your-sip-username
SIGNALWIRE_SIP_PASSWORD=your-sip-password
SIGNALWIRE_SIP_DOMAIN=your-domain.sip.signalwire.com
SIGNALWIRE_WEBSOCKET_URL=wss://your-domain.sip.signalwire.com
SIGNALWIRE_AI_AGENT_ID=your-agent-id

# Alternative Voice Services (Telnyx)
TELNYX_API_KEY=your-telnyx-api-key

# Email Services
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_STARTER=price_your-starter-price-id
STRIPE_PRICE_PRO=price_your-pro-price-id  
STRIPE_PRICE_ENTERPRISE=price_your-enterprise-price-id

# Text-to-Speech
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# CRM Integrations
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret



# Cloudflare (for Wrangler CLI)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CF_ACCOUNT_ID=your-cloudflare-account-id

# Development/Testing
NODE_ENV=development
YOUR_PHONE=+1234567890
ADMIN_API_KEY=your-admin-api-key
SERVICE_API_KEY=your-service-api-key
CRON_SECRET=your-cron-secret

# Monitoring & Error Tracking  
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional Feature Flags
ENABLE_LIVE_TRANSLATION_PREVIEW=true
TRANSLATION_LIVE_ASSIST_PREVIEW=true
ASSEMBLYAI_SKIP_SIGNATURE_VALIDATION=true
SIGNALWIRE_SKIP_SIGNATURE_VALIDATION=true

# R2 Storage (if using S3-compatible API instead of bindings)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com  
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name