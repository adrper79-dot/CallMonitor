{
  "name": "gemini-project",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "pages:deploy": "wrangler pages deploy out --project-name wordisbond",
    "api:dev": "wrangler dev --config workers/wrangler.toml",
    "api:deploy": "wrangler deploy --config workers/wrangler.toml",
    "api:tail": "wrangler tail wordisbond-api",
    "deploy:all": "npm run env:verify && npm run build && npm run pages:deploy && npm run api:deploy",
    "cf:tail": "wrangler tail",
    "cf:logs": "wrangler tail --format pretty",
    "cf:secrets": "wrangler secret list",
    "cf:typegen": "wrangler types",
    "db:migrate": "psql $NEON_PG_CONN -f migrations/auth_pg_adapter.sql",
    "db:reset-test": "psql $NEON_PG_CONN -f migrations/reset_test.sql",
    "test": "vitest",
    "test:run": "vitest run",
    "test:production": "vitest --config vitest.production.config.ts --run",
    "test:prod:db": "RUN_DB_TESTS=1 vitest --config vitest.production.config.ts tests/production/database.test.ts --run",
    "test:prod:api": "RUN_API_TESTS=1 vitest --config vitest.production.config.ts tests/production/api.test.ts --run",
    "test:prod:voice": "RUN_VOICE_TESTS=1 vitest --config vitest.production.config.ts tests/production/voice.test.ts --run",
    "test:prod:all": "RUN_DB_TESTS=1 RUN_API_TESTS=1 vitest --config vitest.production.config.ts --run",
    "test:integration": "vitest tests/integration --run",
    "test:e2e": "vitest tests/integration --run",
    "test:tier1": "vitest tests/tier1-core.test.ts --run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "env:verify": "npx tsx scripts/verify-env.ts",
    "health-check": "curl -f https://wordisbond-api.adrper79.workers.dev/health || exit 1",
    "clean": "rm -rf .next out .open-next .wrangler node_modules/.cache"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.23",
    "@ai-sdk/react": "^3.0.66",
    "@auth/core": "^0.34.3",
    "@auth/pg-adapter": "^1.11.1",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@elevenlabs/elevenlabs-js": "^2.30.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@sentry/nextjs": "^10.36.0",
    "@signalwire/js": "^3.29.1",
    "@signalwire/realtime-api": "^4.1.3",
    "@signalwire/webrtc": "^3.14.1",
    "@supabase/ssr": "^0.8.0",
    "ai": "^6.0.64",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "hono": "^4.7.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "^15.5.2",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "openai": "^6.17.0",
    "pg": "^8.17.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.6.0",
    "resend": "^6.7.0",
    "sip.js": "^0.21.2",
    "stripe": "^20.1.2",
    "tailwind-merge": "^3.4.0",
    "uuid": "^11.1.0",
    "ws": "^8.19.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250130.0",
    "@eslint/eslintrc": "^3.3.3",
    "@neondatabase/serverless": "^1.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.11",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.61.1"
  }
}
